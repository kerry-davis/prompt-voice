# Prompt Voice Streaming Configuration
# Phase 1: WebSocket ASR Setup

# Whisper ASR Model Settings
STREAM_MODEL_WHISPER=small-int8

# VAD (Voice Activity Detection) Settings
STREAM_VAD_SILENCE_MS=700
STREAM_VAD_FRAME_MS=30
STREAM_VAD_SAMPLE_RATE=16000

# ASR Processing Settings
STREAM_PARTIAL_INTERVAL_MS=1000
STREAM_PCM_CHUNK_SIZE=5120

# TTS Engine (Phase 3)
STREAM_TTS_ENGINE=pyttsx3
STREAM_TTS_MAX_PHRASE_LENGTH=60
STREAM_TTS_THREAD_WORKERS=2

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging
LOG_LEVEL=INFO

# OpenAI API Configuration (Phase 2)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# LLM Streaming Settings
STREAM_LLM_TIMEOUT_S=30
STREAM_TTS_TIMEOUT_S=10
LLM_USE_LOCAL_FALLBACK=false

# Backpressure Settings (Phase 4)
STREAM_BACKPRESSURE_THRESHOLD=50
STREAM_BACKPRESSURE_SKIP_FRAMES=3

# Max Utterance Duration (Phase 4)
STREAM_MAX_UTTERANCE_MS=30000

# Backpressure Settings (Phase 4)
STREAM_BACKPRESSURE_THRESHOLD=50
STREAM_BACKPRESSURE_SKIP_FRAMES=3

# LLM Streaming Settings (Phase 2)
STREAM_LLM_TIMEOUT_S=30
LLM_USE_LOCAL_FALLBACK=false

# TTS Settings (Phase 3)
STREAM_TTS_TIMEOUT_S=10
STREAM_MAX_PENDING_PHRASES=5

# Logging Settings (Phase 4)
STREAM_LOG_LATENCY=true